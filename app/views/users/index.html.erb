<h1>All users</h1>

<% @users.each do |user| %>
  <h3><%= link_to user.email, user_path(user) %></h3>
  <% if logged_in? && (current_user == user || current_user.admin? ) %>
    <%= link_to "edit", edit_user_path(user), class: "btn btn-xs btn-success" %>
    <%= link_to "delete", user_path(user), method: :delete,
        data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
  <% end %>
<% end %>
