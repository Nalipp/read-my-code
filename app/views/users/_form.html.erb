<div class="container">
<%= render "shared/errors", obj: @user %>
    <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "email", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "password", autofocus: true %>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <h3><%= f.submit(@user.new_record? ? "sign up" : "update", class: "btn btn-primary btn-lg") %> [ <%= link_to "Cancel", root_path %> ]</h3>
          </div>
        <% end %>
      </div>
    </div>
  </div>
