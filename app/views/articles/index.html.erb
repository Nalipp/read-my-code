<h1>New Article <%= link_to new_article_path do %><i class="glyphicon glyphicon-plus"></i></h1>
<% end %>

<div class="container">
  <% @articles.each do |article| %>
    <div class="well col-xs-8">
      <div class="col-xs-1 grav_article">
        <%= link_to gravatar_for(article.user), user_path(article.user) %>
      </div>
      <h4><%= link_to article.title, article_path(article) %></h4>
      <p><%= article.link %></p>
    <% if logged_in? && (current_user == article.user || current_user.admin? ) %>
      <%= link_to "edit", edit_article_path(article), class: "btn btn-xs btn-success" %>
      <%= link_to "delete", article_path(article), method: :delete,
          data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
  </div>
  <% end %>
</div>
<div align="center">
<%= will_paginate %>
</div>
