<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1>login</h1>
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "password", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <h3><%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
          [ <%= link_to "Cancel", root_path %> ]</h3>
        </div>
      </div>
    <% end %>
    </div>
  </div>
